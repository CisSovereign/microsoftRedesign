  <%= javascript_include_tag     "jquery-1.10.2", "data-turbolinks-track" => true %>
  <%= javascript_include_tag     "bootstrap", "data-turbolinks-track" => true %>
  <%= javascript_include_tag     "waypoints.min", "data-turbolinks-track" => true %>
  <%= javascript_include_tag     "main", "data-turbolinks-track" => true %>
  <%= javascript_include_tag     "hammer.min", "data-turbolinks-track" => true %>
